{
  "name": "@orfium/tokens",
  "version": "5.1.2",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.js"
      }
    },
    "./vars.css": "./dist/vars.css"
  },
  "sideEffects": [
    "**/*.css",
    "**/*.css.ts"
  ],
  "license": "MIT",
  "description": "Design tokens and CSS variables for Orfium Design System",
  "keywords": [
    "Orfium",
    "design-tokens",
    "css-variables",
    "design-system",
    "tokens"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Orfium/orfium-ictinus.git",
    "directory": "packages/tokens"
  },
  "bugs": {
    "url": "https://github.com/Orfium/orfium-ictinus/issues"
  },
  "homepage": "https://github.com/Orfium/orfium-ictinus#readme",
  "packageManager": "pnpm@10.11.0",
  "engines": {
    "node": ">=22",
    "pnpm": ">=10"
  },
  "devDependencies": {
    "@vanilla-extract/css": "^1.17.4",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^4.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cross-env": "^7.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.4",
    "eslint-plugin-import": "^2.27.5",
    "fast-glob": "^3.3.2",
    "jsdom": "^25.0.0",
    "postcss-pxtorem": "^6.1.0",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "rimraf": "^3.0.2",
    "vite": "^7.1.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "lodash-es": "^4.17.21",
    "polished": "^4.3.1",
    "tslib": "^2.4.1",
    "vitest": "^3.2.4"
  },
  "scripts": {
    "prepublishOnly": "pnpm build",
    "build": "vite build",
    "test": "vitest --run",
    "test:watch": "vitest --watch",
    "test:update": "vitest -u",
    "check": "pnpm check:ts && pnpm check:linting && pnpm check:formatting",
    "check:precommit": "pnpm run check:ts && pnpm run check:linting && pnpm run test --passWithNoTests",
    "check:ts": "tsc --noEmit --pretty",
    "check:linting": "eslint src --color",
    "check:formatting": "prettier src --check"
  }
}
