{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "sourceMap": true,
    "skipLibCheck": true,
    "allowJs": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "rootDir": "./src",
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "types": ["@emotion/react/types/css-prop", "node", "jest", "@testing-library/jest-dom"],
    "jsxImportSource": "@emotion/react"
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "scripts",
    "**/storyUtils",
    "**/__snapshots__",
    "**/*.stories.tsx",
    "**/*.stories.mdx",
    "**/*.test.ts",
    "**/*.test.tsx",
    "__mocks__",
    "./jest.config.js"
  ]
}
