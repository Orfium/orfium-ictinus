{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-typescript",
    [
      "@babel/preset-react",
      { "runtime": "automatic", "importSource": "@emotion/react" }
    ]
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx", ".js", ".jsx"],
        "root": ["./src"]
      }
    ],
    "@emotion"
  ],
  "ignore": ["./src/storybook.test.ts", "**/*.stories.tsx", "**/*.stories.storyshot"]
}
