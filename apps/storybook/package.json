{
  "name": "@app/storybook",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:update": "vitest -u",
    "chromatic": "chromatic",
    "check": "pnpm check:ts && pnpm check:linting && pnpm check:formatting",
    "check:precommit": "pnpm run check:ts && pnpm run check:linting && pnpm run test --passWithNoTests",
    "check:ts": "tsc -b --pretty",
    "check:linting": "eslint src --color",
    "check:formatting": "prettier src --check"
  },
  "dependencies": {
    "@orfium/ictinus": "workspace:*",
    "@storybook/test": "^8.6.14",
    "react-docgen-typescript": "^2.4.0",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.1",
    "@eslint/js": "^9.33.0",
    "@storybook/addon-a11y": "^9.1.3",
    "@storybook/addon-designs": "^10.0.2",
    "@storybook/addon-docs": "^9.1.3",
    "@storybook/addon-links": "^9.1.3",
    "@storybook/addon-themes": "^9.1.1",
    "@storybook/addon-vitest": "^9.1.3",
    "@storybook/cli": "^9.1.3",
    "@storybook/react-vite": "^9.1.3",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^9.1.3",
    "globals": "^16.3.0",
    "playwright": "^1.55.0",
    "storybook": "^9.1.3",
    "storybook-addon-pseudo-states": "^4.0.4",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2",
    "vitest": "^3.2.4"
  }
}
