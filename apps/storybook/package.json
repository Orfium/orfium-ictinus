{
  "name": "@app/storybook",
  "private": true,
  "version": "0.0.10",
  "type": "module",
  "scripts": {
    "dev": "storybook dev -p 6006",
    "build": "storybook build --output-dir dist --webpack-stats-json",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest --run",
    "test:update": "vitest -u",
    "chromatic": "chromatic",
    "check": "pnpm check:ts && pnpm check:linting && pnpm check:formatting",
    "check:precommit": "pnpm run check:ts && pnpm run check:linting && pnpm run test --passWithNoTests",
    "check:ts": "tsc --noEmit --skipLibCheck --pretty",
    "check:linting": "eslint src --color",
    "check:formatting": "prettier src --check"
  },
  "dependencies": {
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@orfium/ictinus": "workspace:*",
    "@orfium/tokens": "workspace:*",
    "dayjs": "2.0.0-alpha.4",
    "lodash-es": "^4.17.21",
    "polished": "^4.3.1",
    "react-docgen-typescript": "^2.4.0",
    "react-router": "^7.13.0",
    "remark-gfm": "^4.0.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^4.1.3",
    "@emotion/jest": "^11.13.0",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.34.0",
    "@storybook/addon-a11y": "^10.1.11",
    "@storybook/addon-designs": "^11.1.1",
    "@storybook/addon-docs": "^10.1.11",
    "@storybook/addon-links": "^10.1.11",
    "@storybook/addon-themes": "^10.1.11",
    "@storybook/addon-vitest": "^10.1.11",
    "@storybook/cli": "^10.1.11",
    "@storybook/react-vite": "^10.1.11",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^14.3.1",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@vanilla-extract/vite-plugin": "^5.1.1",
    "@vitejs/plugin-react": "^5.0.1",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "chromatic": "^13.3.5",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-storybook": "^10.1.11",
    "globals": "^16.3.0",
    "playwright": "^1.55.1",
    "prettier-plugin-organize-imports": "^4.2.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "storybook": "^10.1.11",
    "typescript-eslint": "^8.52.0",
    "vite": "^7.3.1",
    "vite-plugin-svgr": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4"
  }
}
