  cursor: pointer;
}

.emotion-1 label:before {
  content: '';
  display: inline-block;
  width: var(--ictinus-sizing-5);
  height: var(--ictinus-sizing-5);
  box-sizing: border-box;
  border: var(--ictinus-border-width-2) solid var(--ictinus-color-border-color-interactive-default);
  border-radius: var(--ictinus-border-radius-7);
  -webkit-transition: all 200ms;
  transition: all 200ms;
  background: var(--ictinus-color-transparent-1);
}

.emotion-1 label:hover::before {
  background: rgba(200,206,255,0.20);
  box-shadow: 0px 0px 0px 8px rgba(200,206,255,0.20);
}

.emotion-1 label[data-selected='true']:before {
  border-color: var(--ictinus-color-palette-primary-base);
  border-radius: 50%;
}

.emotion-1 label[data-selected='true']:hover::before {
  background: none;
  box-shadow: none;
}

.emotion-1 label[data-selected='true']:after {
  content: '';
  display: block;
  position: absolute;
  border-radius: 50%;
  width: var(--ictinus-sizing-3);
  height: var(--ictinus-sizing-3);
  background: var(--ictinus-color-palette-primary-base);
  left: 4px;
  -webkit-animation: circle 0.15s ease-in-out;
  animation: circle 0.15s ease-in-out;
}

.emotion-1 [data-disabled='true'] {
  opacity: 50%;
  cursor: not-allowed;
}

.emotion-1 [data-disabled='true']:hover::before {
  background: none;
  box-shadow: none;
}

