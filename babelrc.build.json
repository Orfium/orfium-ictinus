{
  "presets": [
    "@babel/preset-env",
    "@babel/preset-react",
    "@babel/preset-typescript",
    "@emotion/babel-preset-css-prop"
  ],
  "plugins": [
    [
      "module-resolver",
      {
        "extensions": [".ts", ".tsx", ".js", ".jsx"],
        "root": ["./src"]
      }
    ]
  ],
  "ignore": [
    "**/storyUtils",
    "**/__snapshots__",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.stories.tsx",
    "**/*.mdx"
  ]
}
