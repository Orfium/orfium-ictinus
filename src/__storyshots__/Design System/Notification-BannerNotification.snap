.emotion-0 {
  position: relative;
  width: -webkit-fit-content;
  width: -moz-fit-content;
  width: fit-content;
}

.emotion-1 {
  font-family: Roboto;
  font-weight: 500;
  line-height: 1.25rem;
  font-size: 0.875rem;
  letter-spacing: 0.015625rem;
  color: #ffffff;
  background-color: #175bf5;
  padding: 0.5rem 1rem;
  border-radius: 0.25rem;
  border: none;
  cursor: pointer;
  -webkit-transition: background-color,border 150ms linear;
  transition: background-color,border 150ms linear;
}

.emotion-1:focus-visible:not(:disabled) {
  background-color: #1552DD;
}

.emotion-1:disabled {
  opacity: 50%;
  cursor: not-allowed;
}

.emotion-1:hover:not(:disabled) {
  background-color: #1552DD;
}

.emotion-1:active:not(:disabled) {
  background-color: #1249C4;
}

.emotion-2 {
  display: -webkit-box;
  display: -webkit-flex;
  display: -ms-flexbox;
  display: flex;
  -webkit-align-items: center;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  -webkit-box-pack: center;
  -ms-flex-pack: center;
  -webkit-justify-content: center;
  justify-content: center;
  gap: 0.5rem;
}

<div>
  <div
    style="display: flex; flex-direction: column; padding: 1rem; justify-content: center; align-items: center; width: 1024px;"
  >
    <div
      style="width: 100%; height: 100%;"
    >
      <div
        class="emotion-0"
      >
        <button
          class="emotion-1"
          data-testid="button"
          type="button"
        >
          <span
            class="emotion-2"
          >
            <span>
              Show Notifications
            </span>
          </span>
        </button>
      </div>
    </div>
    <p
      style="padding-top: 8px;"
    />
  </div>
</div>