.emotion-0 {
  -webkit-align-self: center;
  -ms-flex-item-align: center;
  align-self: center;
}

.emotion-1 {
  width: 1.625rem;
  position: relative;
  height: 0.375rem;
}

.emotion-2 {
  position: absolute;
  left: 0.625rem;
  width: 0.375rem;
  height: 0.375rem;
  border-radius: 0.3125rem;
  background-color: #bac6d9;
  color: #bac6d9;
  -webkit-animation: dotFlashing 0.7s infinite linear alternate;
  animation: dotFlashing 0.7s infinite linear alternate;
  -webkit-animation-delay: 0.5s;
  animation-delay: 0.5s;
}

.emotion-2::after,
.emotion-2::before {
  content: '';
  display: inline-block;
  position: absolute;
  top: 0;
}

.emotion-2::before {
  left: -0.625rem;
  width: 0.375rem;
  height: 0.375rem;
  border-radius: 0.3125rem;
  background-color: #bac6d9;
  color: #bac6d9;
  -webkit-animation: dotFlashing 0.7s infinite alternate;
  animation: dotFlashing 0.7s infinite alternate;
  -webkit-animation-delay: 0s;
  animation-delay: 0s;
}

.emotion-2::after {
  left: 0.625rem;
  width: 0.375rem;
  height: 0.375rem;
  border-radius: 0.3125rem;
  background-color: #bac6d9;
  color: #bac6d9;
  -webkit-animation: dotFlashing 0.7s infinite alternate;
  animation: dotFlashing 0.7s infinite alternate;
  -webkit-animation-delay: 0.7s;
  animation-delay: 0.7s;
}

.emotion-4 {
  position: relative;
  width: 100%;
  height: 0.5rem;
  overflow-x: hidden;
  border-radius: 0.5rem;
}

.emotion-5 {
  position: absolute;
  opacity: 0.4;
  background: #e7ebf2;
  width: 150%;
  height: 0.5rem;
}

.emotion-6 {
  position: absolute;
  background: #175bf5;
  height: 0.5rem;
  -webkit-animation: decrease 2.3s 0.8s infinite;
  animation: decrease 2.3s 0.8s infinite;
}

.emotion-7 {
  position: absolute;
  background: #175bf5;
  height: 0.5rem;
  -webkit-animation: increase 2.3s infinite;
  animation: increase 2.3s infinite;
}

.emotion-9 {
  width: 1.5rem;
  height: 1.5rem;
  margin: auto;
  box-sizing: border-box;
  border-top: 0.125rem solid #175bf5;
  border-right: 0.125rem solid #175bf5;
  border-bottom: 0.125rem solid #175bf5;
  border-left: 0.125rem solid transparent;
  border-radius: 50%;
  -webkit-animation: spin 1.1s infinite linear;
  animation: spin 1.1s infinite linear;
}

<div>
  <div
    style="margin: 10px;"
  >
    <strong>
      dots
      :
    </strong>
    <div
      class="emotion-0"
    >
      <div
        class="emotion-1"
        data-testid="dots-loading"
      >
        <div
          class="emotion-2"
        />
      </div>
    </div>
  </div>
  <div
    style="margin: 10px;"
  >
    <strong>
      indeterminate
      :
    </strong>
    <div
      class="emotion-0"
    >
      <div
        class="emotion-4"
        data-testid="dots-loading"
      >
        <div
          class="emotion-5"
        />
        <div
          class="emotion-6"
        />
        <div
          class="emotion-7"
        />
      </div>
    </div>
  </div>
  <div
    style="margin: 10px;"
  >
    <strong>
      spinner
      :
    </strong>
    <div
      class="emotion-0"
    >
      <div
        class="emotion-9"
        data-testid="spinner"
      />
    </div>
  </div>
</div>