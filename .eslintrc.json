{
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "prettier",
    "prettier/@typescript-eslint",
    "plugin:react-hooks/recommended"
  ],
  "plugins": ["react", "emotion", "@typescript-eslint"],
  "env": {
    "node": true,
    "browser": true,
    "jasmine": true,
    "jest": true,
    "es6": true
  },
  "rules": {
    /* React rules */
    "react/no-direct-mutation-state": "error",
    "react/no-unused-prop-types": "warn",
    "react/self-closing-comp": [
      "warn",
      {
        "component": true,
        "html": true
      }
    ],
    "react/prop-types": "off",
    "react/button-has-type": "warn",
    "react/no-array-index-key": "warn",
    "react/no-render-return-value": 0,

    /* JSX rules */
    "react/jsx-key": "error",

    /* eslint basic rules */
    "no-unused-vars": [
      "warn",
      {
        "args": "all",
        "argsIgnorePattern": "^__",
        "varsIgnorePattern": "^__|React"
      }
    ],
    "padding-line-between-statements": [
      "error",
      {
        "blankLine": "always",
        "prev": "function",
        "next": "*"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": "function"
      },
      {
        "blankLine": "always",
        "prev": "*",
        "next": "return"
      }
    ],
    // Disable this in favour of @typescript-eslint/no-unused-expressions
    // so that function calls with optional chaining do not throw warnings
    // https://github.com/facebook/create-react-app/issues/8107#issuecomment-565365982
    //    "no-unused-expressions": "warn",
    "@typescript-eslint/no-unused-expressions": "warn",
    "no-debugger": "warn",
    "no-console": "warn",

    /* Typescript rules */
    "@typescript-eslint/ban-ts-ignore": 0,
    "@typescript-eslint/no-empty-function": 0,
    "@typescript-eslint/camelcase": 0,
    "@typescript-eslint/prefer-interface": 0,
    "@typescript-eslint/no-inferrable-types": 0,
    "@typescript-eslint/explicit-member-accessibility": 0,
    "@typescript-eslint/explicit-function-return-type": 0
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "detect"
    }
  },
  "parser": "@typescript-eslint/parser"
}
